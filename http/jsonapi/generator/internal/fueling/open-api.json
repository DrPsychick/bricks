          "type": {
            "type": "string",
            "description": "Type",
            "enum": [
              "pump"
            ]
          },
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Pump ID",
            "example": "f106ac99-213c-4cf7-8c1b-1e841516026b"
          },
          "attributes": {
            "type": "object",
            "properties": {
              "status": {
                "$ref": "#/components/schemas/PumpStatus"
              },
              "identifier": {
                "type": "string",
                "description": "Pump identifier",
                "example": "2"
              }
            }
          }
        }
      },
      "PumpResponse": {
