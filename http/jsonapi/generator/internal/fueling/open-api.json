                    },
                    {
                      "type": "fuelPrice",
                      "id": "f563e0ee-ba9a-4869-8fe7-42639fcf375d",
                      "attributes": {
                        "fuelType": "ron95_e10",
                        "fuelAmountUnit": "Ltr",
                        "pricePerUnit": 1.379,
                        "currency": "EUR",
                        "productName": "Super E10"
                      }
                    },
                    {
